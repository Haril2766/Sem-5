@model AddressBook.Models.CountryModel

<main id="main" class="main">
    <div class="container">
        <div class="pagetitle">
            <h1>Country Add</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item">Country</li>
                    <li class="breadcrumb-item active"><a asp-controller="Country" asp-action="CountryAddEdit">CountryAddEdit</a></li>
                </ol>
            </nav>
        </div><!-- End Page Title -->
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Add New Country</h5>
                <form class="row g-3" asp-controller="Country" asp-action="CountrySave" method="post">
                    <input hidden asp-for="CountryId" />
                    <div class="col-12">
                        <label for="inputName4" asp-for="CountryName" class="form-label"><span class="text-danger">*</span>Country Name</label>
                        <input type="text" asp-for="CountryName" class="form-control" id="inputName4" placeholder="Enter Country Name">
                        <span asp-validation-for="CountryName" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label for="inputQuestions4" asp-for="CountryCode" class="form-label"><span class="text-danger">*</span>CountryCode</label>
                        <input type="text" asp-for="CountryCode" class="form-control" id="inputQuestions4" placeholder="Enter Country Code">
                        <span asp-validation-for="CountryCode" class="text-danger"></span>
                    </div>

          

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a class="btn btn-secondary" asp-controller="Country" asp-action="CountryList">Cancel</a>
                    </div>
                </form><!-- Vertical Form -->
            </div>
        </div>
    </div>
</main>
